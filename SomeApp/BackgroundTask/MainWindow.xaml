<Window x:Class="BackgroundTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackgroundTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="buttonStart" Content="Start" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="106" Click="buttonStart_Click"/>
        <Button x:Name="buttonStop" Content="Cancel" HorizontalAlignment="Left" Height="31" Margin="239,10,0,0" VerticalAlignment="Top" Width="101" Click="buttonStop_Click"/>
        <ProgressBar Name="progress" HorizontalAlignment="Left" Height="22" Margin="10,58,0,0" VerticalAlignment="Top" Width="330"/>

    </Grid>
</Window>
